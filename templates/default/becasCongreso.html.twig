{% extends 'base.html.twig' %}

{% block body %}
    <section class="page_breadcrumbs cs section_padding_top_50 section_padding_bottom_50 becas_bg">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 text-center">
                    <h2>{% trans %}becas.titulo{% endtrans %}</h2>
                </div>
            </div>
        </div>
    </section>
    <section class="ls section_padding_top_100 section_padding_bottom_50">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    {% trans %}becas.congreso.texto{% endtrans %}
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-error">
                            {{ message }}
                        </div>
                    {% endfor %}
                    {{ form_start(form, {'attr' : {'class' : 'contact-form columns_padding_10 bottommargin_40'}}) }}
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group bottommargin_0">
                                    <label for="{{ form.name.vars.id }}">Nombre Completo<span class="required">*</span></label>
                                    <i class="fa fa-user highlight2" aria-hidden="true"></i>
                                    {{ form_widget(form.name, {'attr' : {'class' : 'form-control', 'size' : 30, 'aria-required': 'true'}}) }}
                                    {{ form_errors(form.name) }}
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group bottommargin_0">
                                    <label for="{{ form.email.vars.id }}">Email<span class="required">*</span></label>
                                    <i class="fa fa-envelope highlight2" aria-hidden="true"></i>
                                    {{ form_widget(form.email, {'attr' : {'class' : 'form-control', 'size' : 30, 'aria-required': 'true'}}) }}
                                    {{ form_errors(form.email) }}
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group bottommargin_0">
                                    <label for="{{ form.telephone.vars.id }}">Teléfono/Celular<span class="required">*</span></label>
                                    <i class="fa fa-phone highlight2" aria-hidden="true"></i>
                                    {{ form_widget(form.telephone, {'attr' : {'class' : 'form-control', 'size' : 30, 'aria-required': 'true'}}) }}
                                    {{ form_errors(form.telephone) }}
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group bottommargin_0">
                                    <label for="{{ form.institution.vars.id }}">Institución<span class="required">*</span></label>
                                    <i class="fa fa-institution highlight2" aria-hidden="true"></i>
                                    {{ form_widget(form.institution, {'attr' : {'class' : 'form-control', 'size' : 30, 'aria-required': 'true'}}) }}
                                    {{ form_errors(form.institution) }}
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group bottommargin_0">
                                    <label for="{{ form.program.vars.id }}">Programa de Posgrado<span class="required">*</span></label>
                                    <i class="fa fa-graduation-cap highlight2" aria-hidden="true"></i>
                                    {{ form_widget(form.program, {'attr' : {'class' : 'form-control', 'size' : 30, 'aria-required': 'true'}}) }}
                                    {{ form_errors(form.program) }}
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <span class="input-placeholder">CV resumido</span>
                                {{ form_widget(form.cv, {'attr' : {'class' : 'inputfile inputfile-6', 'data-multiple-caption': '{count} files selected'}}) }}
                                {{ form_errors(form.cv) }}
                                <label class="for-ok" for="{{ form.cv.vars.id }}">
                                    <span></span>
                                    <strong>
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17">
                                            <path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z"/>
                                        </svg>
                                        <span>cargar archivo&hellip;</span>
                                    </strong>
                                </label>
                            </div>
                            <div class="col-sm-6">
                                <span class="input-placeholder">Escolaridad de Posgrado</span>
                                {{ form_widget(form.scholarship, {'attr' : {'class' : 'inputfile inputfile-6', 'data-multiple-caption': '{count} files selected'}}) }}
                                {{ form_errors(form.scholarship) }}
                                <label class="for-ok" for="{{ form.scholarship.vars.id }}">
                                    <span></span>
                                    <strong>
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17">
                                            <path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z"/>
                                        </svg>
                                        <span>cargar archivo&hellip;</span>
                                    </strong>
                                </label>
                            </div>
                            <div class="col-sm-6">
                                <span class="input-placeholder">Carta aval orientador</span>
                                {{ form_widget(form.letter, {'attr' : {'class' : 'inputfile inputfile-6', 'data-multiple-caption': '{count} files selected'}}) }}
                                {{ form_errors(form.letter) }}
                                <label class="for-ok" for="{{ form.letter.vars.id }}">
                                    <span></span>
                                    <strong>
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17">
                                            <path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z"/>
                                        </svg>
                                        <span>cargar archivo&hellip;</span>
                                    </strong>
                                </label>
                            </div>
                            <div class="col-sm-12">
                                <div class="contact-form-message">
                                    <label for="{{ form.name.vars.id }}">Carta Intención</label>
                                    {{ form_widget(form.message, {'attr' : {'class' : 'form-control', 'rows' : 3, 'cols': 45, "aria-required": "true"}}) }}
                                    {{ form_errors(form.message) }}
                                </div>
                            </div>
                            <div class="col-sm-12 bottommargin_0">
                                <div class="contact-form-submit topmargin_10"> <button type="submit" id="contact_form_submit" name="contact_submit" class="theme_button color2 wide_button margin_0 inverse">enviar</button> </div>
                            </div>
                        </div>
                        {{ form_rest(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
