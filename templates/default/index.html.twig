{% extends 'base.html.twig' %}

{% block body %}
    <section class="intro_section page_mainslider ds color">
        <div class="flexslider" data-dots="true" data-nav="false">
            <ul class="slides">
                <li> <img src="{{ asset('images/slide01.jpg') }}" alt=""></li>
                <li> <img src="{{ asset('images/slide02.jpg') }}" alt=""></li>
                <li> <img src="{{ asset('images/slide03.jpg') }}" alt=""></li>
            </ul>
        </div>
        <!-- eof flexslider -->
    </section>
    <section id="about" class="ls section_padding_top_100 section_padding_bottom_100">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 text-center">
                    <h2 class="section_header">{% trans %}home.sub.titulo{% endtrans %}</h2>
                    <p>{% trans %}home.sub.texto{% endtrans %}</p>
                </div>
            </div>
            <div class="row columns_margin_bottom_20">
                <div class="col-md-4 col-sm-6">
                    <div class="teaser hover_icon with_padding big-padding with_border rounded text-center">
                        <div class="teaser_icon size_big highlight"> <i class="fa fa-user"></i> </div>
                        <h4 class="topmargin_20 hover-color2"><a href="{{ path('site_authorities') }}">{% trans %}home.autoridades.titulo{% endtrans %}</a></h4>
                        <p class="content-3lines-ellipsis">{% trans %}home.autoridades.texto{% endtrans %}</p>
                        <p class="topmargin_30 bottommargin_0"> <a href="{{ path('site_authorities') }}" class="theme_button color2 inverse min_width_button">{% trans %}home.autoridades.ver{% endtrans %}</a> </p>
                    </div>
                </div>
                <div class="col-md-4 col-sm-6">
                    <div class="teaser hover_icon with_padding big-padding with_border rounded text-center">
                        <div class="teaser_icon size_big highlight"> <i class="fa fa-cubes"></i> </div>
                        <h4 class="topmargin_20 hover-color2"><a href="{{ path('site_seccionales') }}">{% trans %}home.seccionales.titulo{% endtrans %}</a></h4>
                        <p class="content-3lines-ellipsis">{% trans %}home.seccionales.texto{% endtrans %}</p>
                        <p class="topmargin_30 bottommargin_0"> <a href="{{ path('site_seccionales') }}" class="theme_button color2 inverse min_width_button">{% trans %}home.seccionales.ver{% endtrans %}</a> </p>
                    </div>
                </div>
                <div class="col-md-4 col-sm-6 col-sm-offset-3 col-md-offset-0">
                    <div class="teaser hover_icon with_padding big-padding with_border rounded text-center">
                        <div class="teaser_icon size_big highlight"> <i class="fa fa-graduation-cap"></i> </div>
                        <h4 class="topmargin_20 hover-color2"><a href="{{  path('site_becas') }}">{% trans %}home.becas.titulo{% endtrans %}</a></h4>
                        <p class="content-3lines-ellipsis">{% trans %}home.becas.texto{% endtrans %}</p>
                        <p class="topmargin_30 bottommargin_0"> <a href="{{  path('site_becas') }}" class="theme_button color2 inverse min_width_button">{% trans %}home.becas.ver{% endtrans %}</a> </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="products" class="ds color parallax page_gallery section_padding_top_100 section_padding_bottom_100 columns_padding_25">
        <div class="container">
            <div class="row display_table_md">
                <div class="col-md-6 col-md-push-6 display_table_cell_md">{% trans %}home.congreso.image{% endtrans %}</div>
                <div class="col-md-6 col-md-pull-6 display_table_cell_md">
                    <h2 class="section_header">{% trans %}home.congreso.titulo{% endtrans %}</h2>
                    <p>{% trans %}home.congreso.texto{% endtrans %}</p>
                    <p class="topmargin_30">{% trans %}home.congreso.link{% endtrans %}</p>
                </div>
            </div>
        </div>
    </section>

    <section id="blog" class="ls section_padding_top_100 section_padding_bottom_100">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <h2 class="section_header text-center">{% trans %}home.noticias.titulo{% endtrans %}</h2>
                    <div class="owl-carousel text-nav" data-nav="true" data-responsive-lg="1" data-responsive-md="1" data-responsive-sm="1">
                        {%  set position = 1 %}
                        {% if news.first is defined %}
                        <div class="row">
                            <div class="col-md-6">
                                <div class="panel-group" id="posts-accordion1">
                                    {% for object_new in news.1 %}
                                    {{ include('default/_indexNews.html.twig', {'object_new': object_new, 'panel' : 1, 'position' : position}) }}
                                        {%  set position = position + 1 %}
                                    {% endfor %}
                                </div>
                            </div>

                            <div class="col-md-6">
                                {{ include('default/_indexBigNews.html.twig', {'object_new': news.first}) }}
                            </div>
                        </div>
                        {% endif %}
                        {% if news.second is defined %}
                        <div class="row">
                            <div class="col-md-6">
                                <div class="panel-group" id="posts-accordion2">
                                    {% for object_new in news.2 %}
                                        {{ include('default/_indexNews.html.twig', {'object_new': object_new, 'panel' : 2, 'position' : position}) }}
                                        {%  set position = position + 1 %}
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="col-md-6">
                                {{ include('default/_indexBigNews.html.twig', {'object_new': news.first}) }}
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
